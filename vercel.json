{
  "version": 2,
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/src/**",
          "backend/prisma/**",
          "backend/api/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
